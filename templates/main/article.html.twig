{% extends 'base.html.twig' %}

{% block title %}Stéphanie de Vregille | Categorie
{% endblock %}

{% block body %}
	<div class="container">
        <section class=" row article">
    
    
        
   
        
        <article class="col-md-9 mx-auto text-center border border-dark mb-3 p-3 mt-3 mr-1">
            <h2>{{article.titre}}</h2>
            <div class="metadata">Ecrit le {{article.dateCreation|date('d/m/Y à H:i:s')}} dans la catégorie {{ article.categorie }}</div>
            <div class="content">
                <img class="img-fluid" src="../uploads/images/{{article.images.0}}" alt="">
                <div class="text-center">{{ article.descriptionLongue|raw}}</div>
                
            </div>
        
        </article>
 
    </section>

    
    </div>
{% endblock %}
